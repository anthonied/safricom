@{
    ViewBag.Title = "ContactDetails";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />


<h2>Client Contact Details</h2>

<div class="container-fluid">
	<div class="row-fluid" >
		<div class="span12" >
			<ul class="nav nav-tabs" style="margin-bottom:0px; border-bottom:0px;">
				<li class="active"><a href="#Tab1" data-toggle="tab">Initial</a></li>
				<li><a href="#Tab2" data-toggle="tab">Detail</a></li>
				<li><a href="#Tab3" data-toggle="tab">Extra</a></li>
			</ul>
		</div>
	</div>
</div>

<div id="contactTabs" class="tab-content">
	<div id="Tab1" class="tab-pane active">
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span6">
					<form>
						<div class="row-fluid">
							<div class="span4">
								<label>Name:</label>
							</div>
							<div class="span6">
								<input id="nameEntry" type="text" />
							</div>
						</div>
						<div class="row-fluid">
							<div class="span4">
								<label>Surname:</label>
							</div>
							<div class="span6">
								<input id="surnameEntry"type="text" />
							</div>
						</div>
						<div class="row-fluid">
							<div class="span4">
								<label>Business name:</label>
							</div>
							<div class="span6">
								<input id="businessNameEntry"type="text" />
							</div>
						</div>
						<div class="row-fluid">
							<div class="span4">
								<label>Cell phone 1:</label>
							</div>
							<div class="span6">
								<input id="cellOneEntry"type="text" />
							</div>
						</div>
						<div class="row-fluid">
							<div class="span4">
								<label>Telephone (w):</label>
							</div>
							<div class="span6">
								<input id="telephoneEntry" type="text" />
							</div>
						</div>
						<div class="row-fluid">
							<div class="span4">
								<label>E-mail:</label>
							</div>
							<div class="span6">
								<input id="emailEntry" type="text" />
							</div>
						</div>
						
			
					</form>
				</div>
				<div class="span5 offset1">
					<form>
						<h4>Client status</h4>
						<label class="radio">Potential
							<input type="radio" name="clientStatus" checked/>
						</label>
						<label class="radio">Paid deposit
							<input type="radio" name="clientStatus" />
						</label>
						<label class="radio">Final payment due
							<input type="radio" name="clientStatus" />
						</label>
						<label class="radio">Installed
							<input type="radio" name="clientStatus" />
						</label>
						<label class="radio">In process
							<input type="radio" name="clientStatus" />
						</label>
						<label class="radio">Quoted
							<input type="radio" name="clientStatus" />
						</label>
					</form>
				</div>
			</div>
		</div>
	</div>


	<div id="Tab2" class="tab-pane"  >
		<div class="container-fluid">
		<div class="span6" >
			<form>
				
				<div class="row-fluid">
					<div class="span8">
						<h4>Installation Address:</h4>
					</div>
					
				</div>
				<div class="row-fluid">
					<div class="span4">
						<label>Street number:</label>
					</div>
					<div class="span1">
						<input id="installationStreetNumberEntry" type="text" class="input-mini"/>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span4">
						<label>Street:</label>
					</div>
					<div class="span6"  class="input-xlarge">
						<input id="installationStreetEntry"  type="text" />
					</div>
				</div>
				<div class="row-fluid">
					<div class="span4">
						<label>City/Town:</label>
					</div>
					<div class="span6">
						<input  id="installationCityEntry"  type="text" />
					</div>
				</div>
				<div class="row-fluid">
					<div class="span4">
						<label>Suburb:</label>
					</div>
					<div class="span6">
						<input id="installationSuburbEntry"  type="text" />
					</div>
				</div>
				
				<div class="row-fluid">
					<div class="span4">
						<label>GPS coordinates:</label>
					</div>
					<div class="span6">
						<input id="installationGPSEntry"  type="text" />
					</div>
				</div>
				<div class="row-fluid">
					<div class="span4">
						<label>ID/Passport:</label>
					</div>
					<div class="span6">
						<input id="idPassportEntry" type="text" />
					</div>
				</div>
				<div class="row-fluid">
					<div class="span4">
						<label>VAT Registration:</label>
					</div>
					<div class="span6">
						<input id="vatEntry" type="text" />
					</div>
				</div>

				
			</form>
				</div>
			<div class="span5 offset1">
				<form>
					<h4>Client type</h4>
					<label class="radio">Main
						<input type="radio" name="clientType" checked/>
					</label>
					<label class="radio">Financial
						<input type="radio" name="clientType" />
					</label>
					<label class="radio">Technical
						<input type="radio" name="clientType" />
					</label>
				</form>

			</div>
		</div>
	</div>

	<div id="Tab3" class="tab-pane">
		<div class="container-fluid">
			<div class="span6">
				<form>
					<div class="row-fluid">
						<div class="span6">
							<h4>Physical Address:</h4>
						</div>
					
					</div>
					<div class="row-fluid">
						<div class="span4">
							<label>Street number:</label>
						</div>
						<div class="span2">
							<input id="physicalStreetNumberEntry"  type="text" class="input-mini"/>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<label>Street:</label>
						</div>
						<div class="span6">
							<input id="physicalStreetEntry"  type="text" />
						</div>
					</div>

					<div class="row-fluid">
						<div class="span4">
							<label>City/Town:</label>
						</div>
						<div class="span6">
							<input  id="physicalCityEntry"  type="text" />
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<label>Suburb:</label>
						</div>
						<div class="span6">
							<input id="physicalSuburbEntry"  type="text" />
						</div>
					</div>
				
					<div class="row-fluid">
						<div class="span6">
							<h4>Postal Address:</h4>
						</div>
					
					</div>
					<div class="row-fluid">
						<div class="span4">
							<label>Street number:</label>
						</div>
						<div class="span1">
							<input id="postalStreetNumberEntry" type="text" class="input-mini"/>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<label>Street:</label>
						</div>
						<div class="span6">
							<input id="postalStreetEntry"  type="text" />
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4" style="font-style:italic">
							or
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<label>Post box:</label>
						</div>
						<div class="span6">
							<input id="postalPOBoxEntry"  type="text" />
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<label>City/Town:</label>
						</div>
						<div class="span6">
							<input id="postalCityEntry"  type="text" />
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<label>Suburb:</label>
						</div>
						<div class="span6">
							<input id="postalSuburbEntry"  type="text" />
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<label>Postal code:</label>
						</div>
						<div class="span2">
							<input id="postalPostalCodeEntry"  type="text" class="input-mini"/>
						</div>
					</div>
				</form>
			</div>
			<div class="span6">
				<div class="row-fluid">
					<div class="span6">
						<h4>Other:</h4>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span4">
						<label>Telephone (H):</label>
					</div>
					<div class="span6">
						<input type="text" />
					</div>
				</div>

				<div class="row-fluid">
					<div class="span4">
						<label>Telephone (W):</label>
					</div>
					<div class="span6">
						<input type="text" />
					</div>
				</div>

				<div class="row-fluid">
					<div class="span4">
						<label>Fax:</label>
					</div>
					<div class="span6">
						<input type="text" />
					</div>
				</div>

				<div class="row-fluid">
					<div class="span4">
						<label>Cell phone 1:</label>
					</div>
					<div class="span6">
						<input type="text" />
					</div>
				</div>

				<div class="row-fluid">
					<div class="span4">
						<label>Cell phone 2:</label>
					</div>
					<div class="span6">
						<input type="text" />
					</div>
				</div>

				<div class="row-fluid">
					<div class="span4">
						<label>Email:</label>
					</div>
					<div class="span6">
						<input type="text" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span3 offset9">
			<button type="button" class="btn btn-success" onclick="SaveClient()"><i class="icon-plus icon-white"></i>Save</button>
			<button type="button" class="btn btn-danger"><i class="icon-refresh icon-white"></i>Reset</button>
		</div>
	</div>
</div>

<script>

    function SaveClient()
    {
        $.post("/Clients/SaveClient",
            {
                clientInfo: JSON.stringify
                (
                    {
                        Name: nameEntry.value,
                        Surname: surnameEntry.value,
                        BusinessName: businessNameEntry.value,
                        CellPhoneOne: cellOneEntry.value,
                        Telephone: telephoneEntry.value,
                        Email: emailEntry.value,
                        IdPassport: idPassportEntry.value,
                        VatNumber: vatEntry.value,
                        
                        InstallationAddress:
                            {
                                StreetNumber: installationStreetNumberEntry.value,
                                Street: installationStreetEntry.value,
                                City: installationCityEntry.value,
                                Suburb: installationSuburbEntry.value,
                                GPS: installationGPSEntry.value
                            },
                        PhysicalAddress:
                            {
                                StreetNumber: physicalStreetNumberEntry.value,
                                Street: physicalStreetEntry.value,
                                City: physicalCityEntry.value,
                                Suburb: physicalSuburbEntry.value,
                            },
                        PostalAddress:
                            {
                                StreetNumber: postalStreetNumberEntry.value,
                                Street: postalStreetEntry.value,
                                PoBox: postalPOBoxEntry.value,
                                City: postalCityEntry.value,
                                Suburb: postalSuburbEntry.value,
                                PostalCode: postalPostalCodeEntry.value
                            }
                    }                    
                )
            }, function (response) { handleSaveResponse(response); });
    }
    
    function handleSaveResponse(response)
    {
        alert("!");
    }

	$(document).ready(function ()
	{
		finishLayout(7); //Client Contact Details
	});
</script>
